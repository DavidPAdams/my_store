<p id="notice"><%= notice %></p>
<div class="panel panel-info">
  <div class="panel-heading">
    <h1>Products</h1>
  </div>
  <div class="panel-body">
    <table class="table-striped">
      <thead>
        <tr>
          <th>Category </th>
          <th>Name </th>
          <th>Brand </th>
          <th>Price </th>
          <th>Quantity </th>
          <th>Description </th>
          <th colspan="2">Actions </th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.category.name %></td>
            <td><%= link_to product.name, product %></td>
            <td><%= product.brand %></td>
            <td><%= number_to_currency product.price %></td>
            <td><%= product.quantity %></td>
            <td><%= simple_format(product.description.html_safe) %></td>
            <% if can? :update, product %>
              <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-sm" %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <% if can? :create, Product %>
      <%= link_to 'New Product', new_product_path, class: "btn btn-info btn-sm" %>
    <% end %>
  </div>
</div>
<br>


